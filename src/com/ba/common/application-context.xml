<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="employee" class="com.ba.beans.Employee" autowire="byName">
		<property name="empName" value="Neeraj Kumar" />
	</bean>
	<bean id="address" class="com.ba.beans.Address">
		<property name="city" value="Varanasi" />
		<property name="state" value="Uttar Pradesh" />
	</bean>

</beans>
